.top-player-item {
	display: flex;
	align-items: center;
	padding: 12px;
	border-bottom: 1px solid #ddd;
	background-color: #f5f5f5;
}

.top-player-rank {
	margin-right: 16px;
	font-weight: bold;
}

.top-player-image {
	width: 50px;
	height: 50px;
	border-radius: 50%;
	margin-right: 16px;
}

.top-player-name {
	font-weight: bold;
	margin-right: auto; /* Это сдвинет баланс максимально вправо */
}

.top-player-balance {
	color: #555;
	font-size: 14px;
	margin-left: 16px; /* Добавим отступ слева для баланса */
}