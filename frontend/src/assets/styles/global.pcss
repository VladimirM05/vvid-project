html {
	box-sizing: border-box;
}

*,
*::after,
*::before {
	box-sizing: inherit;
	padding: 0;
	margin: 0;
}

a {
	text-decoration: none;
	color: inherit;
}

li {
	list-style-type: none;
}

button {
	border: none;
	background: none;
}

input {
	outline: 0;

	&::placeholder {
		color: #000000;
	}
}

.wallpaper {
	background-position: center;
	background-repeat: no-repeat;
	background-size: cover;
	position: fixed;
	height: 100vh;
	width: 100vw;
	z-index: -1;
}

.disp {
	display: none;
}
