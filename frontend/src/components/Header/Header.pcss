.header {
	padding: 20px 140px 0 140px;

	.header-inner {
		background-color: #72a88d;
		padding: 0 34px;
		display: flex;
		flex-direction: row-reverse;
		justify-content: space-between;
		border: 1px solid #000000;
		align-items: center;
		box-shadow: 0 2px 4px #000000;
		animation: headerInnerMove 0.5s ease-out;
		height: 49px;

		.menu-list {
			display: flex;
			gap: 0 15px;

			.menu-item {
				background-color: #58816c;
				border: 1px solid #000000;
				padding: 10px 0;
				min-width: 106px;
				text-align: center;
				cursor: pointer;

				.menu-link {
					color: #ffffff;
					font-family: 'Istok', sans-serif;
					font-size: 14px;
				}
			}
		}

		.logo {
			position: absolute;
			transform: translateX(-50%) translateY(5%);
			left: 50%;
		}

		.reg-btn {
			background-color: #ffffff;
			border-radius: 8px;
			padding: 2px 34px 2px 4px;
			border: 4px dotted #cad6e2;
			display: flex;
			align-items: center;

			.reg-img {
				margin-right: 10px;
			}

			.reg-text {
				color: #003169;
				font-family: 'Calibri', sans-serif;
				font-weight: 700;
				line-height: 24px;
			}
		}

		.user-info {
			display: flex;
			align-items: center;
			gap: 0 25px;

			.user-info-btn {
				padding: 4px 10px 4px 4px;
				display: flex;
				justify-content: space-between;
				align-items: center;
				height: 30px;
				background-color: #ffffff;
				width: 112px;
				cursor: pointer;

				.user-info-text {
					font-family: 'Istok', sans-serif;
					font-size: 14px;
				}
			}

			.user-info-btn-2 {
				padding: 8px 0;
				justify-content: center;
				gap: 0 12px;
			}
		}
	}

	@keyframes headerInnerMove {
		from {
			opacity: 0;
			transform: translateY(100%) scale(75%);
		}
		to {
			opacity: 1;
			transform: translateY(0) scale(100%);
		}
	}
}
